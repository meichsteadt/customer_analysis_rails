<p id="notice"><%= notice %></p>
<%= link_to 'Back', customer_path(@customer) %>
<div class="text-center">
  <h1><%= @customer.name.titleize %></h1>
  <p><%= @comparison_customer.name.titleize %> best sellers, missing in <%= @customer.name.titleize %> orders</p>
</div>
<table class="table table-striped table-bordered">
  <tr>
    <th>Model</th>
    <th>% of Sales</th>
  </tr>
  <% @missing_items.each do |item| %>
    <tr>
      <td><%= item[0] %></td>
      <td><%= number_to_percentage(item[1] * 100) %></td>
    </tr>
  <% end %>
</table>
